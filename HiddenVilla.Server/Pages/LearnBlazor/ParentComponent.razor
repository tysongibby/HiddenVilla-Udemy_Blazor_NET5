@page "/parentcomponent"

<h3 class="text-danger">Parent Child Component</h3>

<ChildComponent OnClickBtnMethod="ShowMessage" Title="This title is passed as a parameter from the Parent Component">
    Render Fragment From Parent! WooHOO! (without child content tag.)
</ChildComponent>

<ChildComponent OnClickBtnMethod="ShowMessage" Title="This is the second child component">
    <ChildContent>Render Fragment From Parent! WooHOO! (with child content tag)</ChildContent>
    <DangerChildContent>Danger Content from Render Fragment! WooHOO! (with danger child content tag)</DangerChildContent>
</ChildComponent>
<br />
<AnotherChildComponent InputAttributes="InputAttributesFromParent" ></AnotherChildComponent>

<p><b>@messageText</b></p>


@code 
{
    public Dictionary<string, object> InputAttributesFromParent { get; set; } = new Dictionary<string, object>()
    {
        { "required" , "required" },
        { "placeholder" , "Enter the Room Name From Parent" },
        { "maxlength" , 5 }
    };

    private string messageText = "";

    private void ShowMessage(MouseEventArgs e)
    {
        if (messageText == "")
        {
            messageText = "Blazing text from parent";
        }
        else
        {
            messageText = "";
        }

    }
}
